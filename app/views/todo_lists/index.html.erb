<h1>Todo Lists</h1>

<table class="pure-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr id="<%= dom_id(todo_list) %>">
        <td>
          <%= link_to todo_list.title, todo_list_todo_items_path(todo_list) %>
        </td>
          <td>
            <%= todo_list.description %>
          </td>
          <td>
            <%= link_to 'Edit', edit_todo_list_path(todo_list) %>
            <%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo list', new_todo_list_path, class: "pure-button main-button" %>
